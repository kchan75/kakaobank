	function setData(){
		  var time= new Date(); //시간받기위해서 new date
		  document.getElementById("trxDatetim").value=time.getTime();
		  document.getElementById("guid").value=time.getFullYear() + "-"+  Math.random().toString(36).substr(2,11);
		}
</script>
